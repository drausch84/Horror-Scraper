{{!-- Modal for Comments --}}
<div class="modal fade modalComment" id="commentModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Comments for {{this.title}}</h4>
            </div>
            <div class="modal-body">
                {{#if this.comments}}
                    {{#each this.comments}}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p class="previousComments"> {{this.body}}</p>
                                <button type="button" class="btn btn-light deleteComment" data-comment-id={{this._id}} data-article-id={{this.article}}>X</button>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>Don't be scared, leave a comment!</h4>
                        </div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <textarea id="commentText{{this._id}}" class="form-control" rows="4" placeholder="New Comment"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark saveComment" data-id={{this._id}}>Save Comment</button>
            </div>
        </div>
    </div>
</div>